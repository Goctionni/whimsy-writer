{
  "name": "hello-world",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite serve",
    "build": "npm run update-passages && tsc -b && vite build",
    "lint": "eslint .",
    "update-passages": "whimsy-gen",
    "watch-passages": "whimsy-gen --watch",
    "depcheck": "depcheck . --ignore-bin-package --ignores=@passage/*",
    "typecheck": "tsc -p ./tsconfig.app.json"
  },
  "dependencies": {
    "@tailwindcss/typography": "0.5.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "vite-plugin-singlefile": "2.0.2",
    "whimsy-writer": "0.0.0"
  },
  "devDependencies": {
    "depcheck": "1.4.7",
    "@types/node": "22.7.9",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react-swc": "3.7.1",
    "autoprefixer": "10.4.20",
    "eslint": "9.13.0",
    "eslint-config-base": "0.0.0",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3",
    "typescript-eslint": "8.11.0",
    "vite": "5.4.10"
  }
}
