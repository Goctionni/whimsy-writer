{
  "name": "hello-world",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite serve",
    "build": "npm run update-passages && tsc -b && vite build",
    "lint": "eslint .",
    "update-passages": "npx tsx ./vite/update-passages.ts",
    "watch-passages": "npx tsx ./vite/watch-passages.ts",
    "depcheck": "depcheck . --ignore-bin-package --ignores=@passage/*"
  },
  "dependencies": {
    "@tailwindcss/typography": "0.5.15",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "vite-plugin-singlefile": "2.0.2",
    "whimsy-writer": "0.0.0"
  },
  "devDependencies": {
    "depcheck": "1.4.7",
    "@types/node": "22.7.4",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "@vitejs/plugin-react-swc": "3.7.1",
    "autoprefixer": "10.4.20",
    "eslint": "9.12.0",
    "eslint-config-base": "0.0.0",
    "postcss": "8.4.47",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.2",
    "typescript-eslint": "8.8.0",
    "vite": "5.4.8"
  }
}
